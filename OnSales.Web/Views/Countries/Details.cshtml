@model OnSales.Common.Entities.Country


<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<br />
<br />

<div style="margin-left:10px;" class="chip">
    <img src="https://a.espncdn.com/i/teamlogos/countries/500/arg.png" alt="">
    @Html.DisplayFor(model => model.Name)
</div>

<div style="margin-left:10px;" class="chip">
    NO° de Estados <span class="mate" style="font-size: larger; color:#64B5F6;">{@Html.DisplayFor(model => model.EstatesNumber)}</span>
</div>

<br />
<div class="row">
    <div class="col s1">
        <a id="button_add" asp-action="Index" style="color: #64B5F6;" class="material-icons">reply_all</a>
    </div>

    <div class="col s1">
        <a id="button_add" asp-action="AddOrEditDeparment" asp-route-id="@Model.Id" style="color: #64B5F6;" class="material-icons">add_box</a>
    </div>

    <div class="col s1">
        <a id="button_add" asp-action="AddOrEditDeparment" asp-route-id="@Model.Id" style="color: #64B5F6;" class="material-icons">edit</a>
    </div>

</div>

<table id="example" class="mdl-data-table" style="width:100%;position:relative;">
    <thead>
        <tr>
            <th>Estados</th>
            <th>NO° Estados</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Estates)
        {
            <tr id="row_@item.Id">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td style="display:flex;justify-content:center;">
                    <a id="button_details" asp-action="DetailsOfDeparments" asp-route-id="@item.Id" style="color: #64B5F6;" class="material-icons">read_more</a>
                    <a id="button_edit" asp-action="AddOrEdit" asp-route-id="@item.Id" style="color: #64B5F6;" class="material-icons">edit</a>
                    <a id="delete-button" style="color: #d32f2f;" class="material-icons x" onclick="Delete('@item.Name.ToString()', '@item.Name.ToString()',@item.Id);">delete</a>
                </td>
            </tr>

        }

    </tbody>
</table>

<partial name="_ViewPageDelete" />
@section scripts{
    <script src="~/js/jsIndexFunctions.js" type="text/javascript"></script>;}