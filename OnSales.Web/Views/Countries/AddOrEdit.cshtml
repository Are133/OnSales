@model OnSales.Common.Entities.Country

@{
    ViewData["Title"] = "AddOrEdit";
}


<div class="row">
    <form class="col s12" asp-action="AddOrEdit" enctype="multipart/form-data" id="formulario" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UrlImage" />

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">public</i>
                <input asp-for="Name" required id="icon_prefix" type="text" class="validate">
                <label for="icon_prefix">Nombre</label>
            </div>
        </div>

        <input type="file" asp-for="ImageFile" />

        <div class="row">
            @if (Model.UrlImage == string.Empty)
            {
                if (Model.UrlImage == null)
                {
                    <img src="@Model.ImageFullPath" alt="" />
                }
            }
            else
            {
                <img src="@Model.ImageFullPath" alt="" />
            }

        </div>

        <button class="btn waves-effect waves-light" type="submit" name="action">
            Registrar
            <i class="material-icons right">send</i>
        </button>
    </form>
</div>
